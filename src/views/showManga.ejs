<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <script src="js/jquery.js"></script>
    <script src="js/bootstrap.min.js"></script>
  </head>
  <body>
    <%-include('navbar', {links: links}) %>
    <div class="container">
      <h1 class="my-5">All Manga</h1>
      <div class="row mt-5 text-center">
        <% manga.forEach(manga => { %>
        <div class="col-md-4 border border-black bg-primary py-5">
          <a
            class="text-white text-decoration-none"
            href="/manga/<%= manga.id%>"
            ><%= manga.title %></a
          >
        </div>
        <% }) %>
      </div>
      <div class="d-grid gap-2 col-6 mx-auto mt-5">
        <button class="btn btn-primary btn-lg mt-5">
          <a class="text-white text-decoration-none" href="/add-manga"
            >Add manga</a
          >
        </button>
      </div>
    </div>
  </body>
</html>
